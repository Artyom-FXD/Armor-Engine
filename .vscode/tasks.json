{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ArmorEngine",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-g", "${file}",
                "-o", "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-I", "D:/SFML/include",
                "-L", "D:/SFML/lib",
                "-lsfml-graphics", "-lsfml-window", "-lsfml-system"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}